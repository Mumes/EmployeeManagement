@model List<UserRolesViewModel>
@{
    var UserId = ViewBag.UserId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h5>Add or remove roles for this user</h5>
        </div>
        <div class="card-bode">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input value="Update" type="submit" class="btn btn-primary" style="width:auto" />
            <a asp-action="ManageUserRoles" asp-route-id="@UserId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>

    </div>
</form>

